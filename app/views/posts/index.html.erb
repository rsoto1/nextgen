<h1>Posts Listings</h1>

<%= link_to 'New Post', new_post_path %>
 
<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Body</th>
    <th colspan="2"></th>
  </tr>
 
<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.author %></td>
    <td><%= post.body %></td>
    <td><%= link_to 'Show', post_path(post) %></td>
    <td><%= link_to 'Edit', posts_edit_path(post) %></td>
    <td><%= link_to 'Destroy', post_path(post),
                     method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
